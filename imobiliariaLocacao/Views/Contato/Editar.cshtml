@model ContatoModel

@{
    ViewData["Title"] = "Editar  contato";
}
<div class="text-center ">
    <h1>Editar Contato</h1>
 </div>

<form asp-controller = "Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
 
    <div class="form-group">
        <label for="Nome">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x=>x.Name)
    </div>

    <div class="form-group">
        <label for="E-mail">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail para contato">
        @Html.ValidationMessageFor(x=>x.Email)
    </div>

    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular para contato">
        @Html.ValidationMessageFor(x=>x.Celular)
    </div>


    <div class="form-group">
        <label for="Celular">Endereco</label>
        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço residencial">
        @Html.ValidationMessageFor(x=>x.Endereco)
    </div>

    <div class="form-group">
        <label for="Celular">Bairro</label>
        <input type="text" asp-for="Bairro" class="form-control" placeholder="Digite bairo ">
        @Html.ValidationMessageFor(x=>x.Bairro)
    </div>

    <div class="form-group">
        <label for="Celular">Cidade</label>
        <input type="text" asp-for="Cidade" class="form-control" placeholder="Digite a cidade ">
        @Html.ValidationMessageFor(x=>x.Cidade)
    </div>

    <div class="form-group">
        <label for="Celular">Estado</label>
        <input type="text" asp-for="Estado" class="form-control" placeholder="Digite o estado">
        @Html.ValidationMessageFor(x=>x.Estado)
    </div>

    <div class="form-group">
        <label for="Celular">Cep</label>
        <input type="text" asp-for="Cep" class="form-control" placeholder="Digite o cep">
        @Html.ValidationMessageFor(x=>x.Cep)
    </div>

    <div class="form-group">
        <label for="Celular">ValorAluguel</label>
        <input type="number" step=".01" asp-for="ValorAluguel" class="form-control" placeholder="Digite o valor do aluguel">
        @Html.ValidationMessageFor(x=>x.ValorAluguel)
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>